{% extends 'base-profil.html.twig' %}
{% block body %}
    <section id="profil-orga">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="d-flex d-md-block bg-yellow-1 col-md-4 col-12 p-3"></div>
                    <div class="col-md-2"></div>
                    <div class="col-md-5 mb-5 ml-5">
                        <h1 class="compte mb-5">Mon profil</h1>
                        <div class="profil">
                        {% for statut in listStatut %}
                            <a class="nav-link mx-2" href='?controller=users&action=seeProfil&id={{ user.id_user }}'></i>Voir mon profil</a>
                            {% if statut =='organisateur'%}
                                <a class="nav-link mx-2" href="?controller=events&action=formAddEvent&id={{ user.id_user }}"></i>Ajouter un événement</a>
                                <a class="nav-link mx-2" href="?controller=events&action=seeEvent&id={{ user.id_user }}"></i>Voir mes événements</a>
                            {% else %}
                                <a class="nav-link mx-2" href="?controller=transports&action=addTransport&id={{ user.id_user }}"></i>Ajouter un transport</a>
                                <a class="nav-link mx-2" href="?controller=transports&action=seeTransport&id={{ user.id_user }}"></i>Voir mes transports</a>
                            {% endif %}
                                <a class="nav-link mx-2" href="?controller=users&action=logout"></i>Deconnexion</a>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}