{% extends 'base-profil.html.twig' %}
{% block body %}
<section id="connexion">
    <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="d-flex d-md-block bg-blue-1 col-md-4 col-12 p-3"></div>
                    <div class="col-md-2"></div>
                    <div class="col-md-6">
                        <p class="m-0"> <a href="#"  onclick="backOrToPage()">Retour ?</a></p>
                        <h1 class="compte mb-5">Modifier un événement</h1>
                        <div class="form-row">
                            <form method="post" action="?controller=events&action=update&id_event={{event.id_event}}" onsubmit="return verificationEvent()">
                                <p> 
                                {{message}}
                                    <input class="col-md-6 mb-1 p-2" type="hidden" id="id" name="id_user" value="{{user.id_user}}">
                                </p>
                                <p>
                                    
                                    <input class="col-md-6 mb-1 p-2" type="text" id="titre" name="titre_event" value="{{event.titre_event}}">
                                </p>
                                <label for="photo" class="mb-3">Date de début et de fin :</label>
                                <p>
                                    
                                    <input class="col-md-3 mb-1 p-2 " type="date" id="date-debut" name="date_debut_event" value="{{ event.date_debut_event|date('Y-m-d') }}">
                                    <input class="col-md-3 mb-1 p-2 " type="date" id="date-fin" name="date_fin_event" value="{{ event.date_fin_event|date('Y-m-d') }}">
                                </p>
                                <p>
                                    <div class="col-md-6 col-sm-6">
                                        <select class="form-ville p-2" id="lieu" name="lieu">
                                            {% for lieu in lieu %}
                                                {% if lieu.id_lieu == event.id_lieu %}
                                                    <option value="{{ lieu.id_lieu }}" selected>{{ lieu.ville }}</option>
                                                {% else %}
                                                    <option value="{{ lieu.id_lieu }}">{{ lieu.ville }}</option>
                                                {% endif %}
                                            {% endfor %}
                                        </select>
                                    </div>
                                </p>
                                <p>
                                    <div class="col-md-6 col-sm-6 mb-1">
                                        <select class="form-categorie p-2" id="categorie" name="categorie">
                                            {% for categorie in categorie %}
                                                {% if categorie.id_categorie == event.id_categorie %}
                                                    <option value="{{ categorie.id_categorie }}" selected>{{ categorie.libelle_categorie }}</option>
                                                {% else %}
                                                    <option value="{{ categorie.id_categorie }}">{{ categorie.libelle_categorie }}</option>
                                                {% endif %}
                                                
                                            {% endfor %}
                                        </select>
                                    </div>
                                    </p>
                                        <label for="photo" class="mb-1">Nombre de places :</label>
                                    <p>
                                        <input class="col-md-6 mb-1 p-2" type="number" id="place" name="places" value="{{event.nb_places}}" >
                                    </p>
                                        <label for="photo" class="mb-1">Photos :</label>
                                    <p>
                                        <input class="col-md-6 mb-1 p-2" type="file" id="photo" name="photo" placeholder="photo" accept=".jpeg,.jpg,.png">
                                    </p>

                                    <p> 
                                        <textarea class="col-md-6 mb-1 p-2" type="text" id="resume_event" name="resume_event" value="{{event.resume_event}}">{{event.resume_event}}</textarea>
                                    </p>
                                    <p>
                                        <textarea class="col-md-6 mb-1 p-2" type="text" id="description_event" name="description" value="{{event.description_event}}">{{event.description_event}}</textarea>
                                    </p>
                                <div class="btn">
                                    <a><input class="btn p-0" type="submit" value="Valider"></a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
</section>

{% endblock %}